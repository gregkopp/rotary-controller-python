#: import SetupScreenManager rcp.components.setup.setup_screen_manager
#: import SelectableButton rcp.components.setup.setup_popup

<SetupPopup>:
  id: setup_popup
  screen_manager: screen_manager
  screen_selector: screen_selector
  current_screen: screen_manager.current
  title: "Setup"
  size_hint: 1, 1
  auto_dismiss: False
  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      id: screen_selector
      size_hint_x: None
      width: 128
      orientation: "vertical"
      SelectableButton:
        text: "Scale 0"
        on_release: root.screen_manager.current = "scale_0"
      SelectableButton:
        text: "Scale 1"
        on_release: root.screen_manager.current = "scale_1"
      SelectableButton:
        text: "Scale 2"
        on_release: root.screen_manager.current = "scale_2"
      SelectableButton:
        text: "Scale 3"
        on_release: root.screen_manager.current = "scale_3"
      SelectableButton:
        text: "Servo"
        on_release: root.screen_manager.current = "servo"
      SelectableButton:
        text: "Network"
#        on_release: root.screen_manager.current = "network"
      SelectableButton:
        text: "Formats"
        on_release: root.screen_manager.current = "formats"
      SelectableButton:
        text: "Exit"
        on_release: root.dismiss()

    SetupScreenManager:
      id: screen_manager
      setup_popup: setup_popup
